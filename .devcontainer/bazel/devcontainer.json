{
    "name": "bazel",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "BAZEL_BASE_IMAGE": "bazel-focal"
        },
        "context": ".."
    },
    "remoteUser": "zen",
    "customizations": {
        "vscode": {
            "extensions": [
                "bazelbuild.vscode-bazel",
                "bierner.github-markdown-preview",
                "ms-vscode.cpptools-extension-pack",
                "pbkit.vscode-pbkit",
                "streetsidesoftware.code-spell-checker"
            ]
        }
    },
    "mounts": [
    //     "source=/mnt/mervin/workspaces/devel/maliput_zen/maliput,target=/workspaces/maliput,type=bind,consistency=cached"
        "source=/mnt/mervin/workspaces/devel/maliput_zen/maliput_drake,target=/workspaces/maliput_drake,type=bind,consistency=cached",
        "source=/mnt/mervin/workspaces/devel/maliput_zen/maliput_malidrive,target=/workspaces/maliput_malidrive,type=bind,consistency=cached"
    ]
}
